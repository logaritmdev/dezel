SegmentedBarButton {

	content-orientation: horizontal;
	content-disposition: center;
	content-arrangement: center;
	expand: 1;
	height: 36px;
	padding-left: 12px;
	padding-right: 12px;
	width: wrap;

	.label {
		font-size: 15px;
		lines: 1;
		text-color: #2e84e2;
		text-alignment: center;
		width: wrap;

	}

	&:pressed {
		.label {
			opacity: 0.5;
		}
	}

	&:selected {

		background-color: #2e84e2;

		.label {
			text-color: #fff;
		}
	}
}