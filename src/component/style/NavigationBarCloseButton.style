NavigationBarCloseButton {

	padding-left: 6px;
	padding-right: 6px;
	touch-offset-top: -12px;
	touch-offset-left: -12px;
	touch-offset-right: -12px;
	touch-offset-bottom: -12px;

	#image {
		source: 'images/navigation-bar-close-button.png';
		height: 16px;
		width: 16px;
	}

	#label {
		margin-left: 6px;
	}

	@state pressed {
		#image {
			opacity: 0.5;
		}
	}
}
