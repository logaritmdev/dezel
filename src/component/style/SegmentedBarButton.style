SegmentedBarButton {

	content-direction: horizontal;
	content-alignment: center;
	content-disposition: center;
	expand-factor: 1;
	height: 36px;
	padding-left: 12px;
	padding-right: 12px;
	width: wrap;

	#label {
		font-size: 15px;
		max-lines: 1;
		text-color: #2e84e2;
		text-alignment: center;
		width: wrap;
	}

	@state pressed {
		#label {
			opacity: 0.5;
		}
	}

	@state selected {

		background-color: #2e84e2;

		#label {
			text-color: #fff;
		}
	}
}