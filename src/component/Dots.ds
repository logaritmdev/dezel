Dots {

	content-orientation: horizontal;
	content-disposition: center;
	content-arrangement: center;
	height: 8px;
	touchable: false;

	.dot {

		background-color: rgba(255, 255, 255, 0.5);
		border-radius: 4px;
		height: 8px;
		margin-left: 6px;
		margin-right: 6px;
		width: 8px;

		&:selected {
			background-color: rgba(255, 255, 255, 1)
		}
	}
}